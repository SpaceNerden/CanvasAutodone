// ==UserScript==
// @name         Canvas Autodone
// @namespace    http://tampermonkey.net/
// @version      1.0
// @description  Clicks the "Mark as done" button automatically
// @author       SpaceNerden
// @match        https://dlsl.instructure.com/*
// @match        http://dlsl.instructure.com/*
// @require      http://code.jquery.com/jquery-3.6.0.js
/* globals jQuery, $, waitForKeyElements */

var existCondition = setInterval(function() {
 if ($('#mark-as-done-checkbox').length) {
    console.log("Exists!");
    clearInterval(existCondition);
    run_main();

 }
}, 100); // check every 100ms

function run_main() {
    if (document.getElementById('mark-as-done-checkbox').className == "btn ") {
        document.getElementById('mark-as-done-checkbox').click();
        console.log("Clicked?")
    }
    else {
        console.log("Already set as done.")
    }
}

// ==/UserScript==
